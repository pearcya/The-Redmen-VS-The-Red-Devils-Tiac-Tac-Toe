<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <android.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="243dp"
        android:layout_height="310dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tictactoe"
        android:columnCount="3"
        android:rowCount="3"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:onClick="dropIn"
            android:tag="0"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_column="2"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool1"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:onClick="dropIn"
            android:tag="1"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_column="0"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool2"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:onClick="dropIn"
            android:tag="2"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_column="1"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool3"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_column="0"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:onClick="dropIn"
            android:tag="3"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_column="0"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool4"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:onClick="dropIn"
            android:tag="4"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_column="1"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool5"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_column="2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:onClick="dropIn"
            android:tag="5"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_column="2"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool6"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_column="0"
            android:layout_marginStart="4dp"
            android:layout_marginTop="7dp"
            android:layout_row="2"
            android:onClick="dropIn"
            android:tag="6"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_column="0"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool7"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:onClick="dropIn"
            android:tag="7"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_row="2"
            app:layout_column="1"
            android:layout_row="2"
            android:layout_column="1"/>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool8"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_row="2"
            android:onClick="dropIn"
            android:tag="7"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_column="1"
            app:layout_row="2" />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/liverpool9"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_column="2"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_row="2"
            android:onClick="dropIn"
            android:tag="8"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_column="2"
            app:layout_row="2" />


    </android.widget.GridLayout>


    <LinearLayout
        android:id="@+id/playAgainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_red_dark"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/winnerMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Play Again"
            android:textSize="18sp" />

        <Button
            android:id="@+id/playAgainbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="playAgain"
            android:text="Play Again" />
    </LinearLayout>

</RelativeLayout>